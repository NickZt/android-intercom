<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_menu"
    android:weightSum="1">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:text="Back"
        android:id="@+id/settings_menu_imagebutton_back"
        android:layout_weight="0.07"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_action_button_back"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Camera View"
        android:id="@+id/settings_menu_checkBox_usecamaraview"
        android:layout_gravity="right"
        android:checked="false"
        android:layout_marginTop="74dp"
        android:layout_alignTop="@+id/imageView_device_avatar"
        android:layout_alignRight="@+id/settings_menu_button_save"
        android:layout_alignEnd="@+id/settings_menu_button_save" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView_device_avatar"
        android:layout_weight="0.31"
        android:src="@drawable/ic_action_view_profile"
        android:layout_below="@+id/settings_menu_imagebutton_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Two-Way"
        android:id="@+id/settings_menu_textfield_deviceNic"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/settings_menu_checkBox_usecamaraview"
        android:layout_alignEnd="@+id/settings_menu_checkBox_usecamaraview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/settings_menu_button_save"
        android:layout_weight="0.07"
        android:layout_gravity="right"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/settings_menu_button_cancel"
        android:layout_weight="0.07"
        android:layout_alignTop="@+id/settings_menu_button_save"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nickname:   "
        android:id="@+id/textView"
        android:layout_below="@+id/imageView_device_avatar"
        android:layout_alignRight="@+id/imageView_device_avatar"
        android:layout_alignEnd="@+id/imageView_device_avatar"
        android:layout_marginTop="56dp" />

</RelativeLayout>